<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookCollection</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookCollection.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="nav nav-pills">
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "nav-link active" : "nav-link")">
                        <a class="nav-link text-dark" @Html.ActionLink("Księgozbiór", "Index", "Home", new { area = "" }, new { })</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "AddBook" ? "nav-link active" : "nav-link")">
                        <a class="nav-link text-dark" @Html.ActionLink("Dodaj książkę", "AddBook", "Book", new { area = "" }, new { })</a>
                    </li>
                    <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "GetAllBook" ? "nav-link active" : "nav-link")">
                        <a class="nav-link text-dark" @Html.ActionLink("Katalog książek", "GetAllBook", "Book", new { area = "" }, new { })</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - BookCollection - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
