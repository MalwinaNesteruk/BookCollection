@model IEnumerable<BookCollection.Models.Book>

<link href="~/css/formatting.css" type="text/css" rel="stylesheet" />

<h1>Przeglądanie katalogu książek</h1>

<hr />

<style type="text/css">
    label {
        width: 120px;
        padding: 5px 0 0 5px;
    }

    .form-group {
        padding: 5px 5px 5px 5px; 
        margin-bottom: 15px;
        width: 300px;
        display: flex;
    }


</style>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.Label("Sortuj wg: ")
        @Html.DropDownList("sorting", ViewBag.Book as SelectList, "domyślnie", new { @class = "form-control", onchange = "this.form.submit();"})
    </div>
}

<link href="~/css/table.css" type="text/css" rel="stylesheet" />

<table>
    <tr>
        <th>Tytuł</th>
        <th>Autor</th>
        <th>Gatunek</th>
        <th>Data wydania</th>
    </tr>
    
    @foreach (var book in Model)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.NameAuthor @book.SurnameAuthor </td>
            <td>@book.Genre</td>
            <td>@book.YearOfPublication</td>
        </tr>
    }
</table>
